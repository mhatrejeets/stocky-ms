{
  "info": {
    "name": "Stocky Backend Public API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "stocky-backend-public"
  },
  "item": [
    {
      "name": "Create Reward",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer <token>", "type": "text" },
          { "key": "X-User-ID", "value": "user-1", "type": "text" },
          { "key": "Idempotency-Key", "value": "unique-key-123", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"stock_symbol\": \"RELIANCE\",\n  \"shares\": \"1.000000\",\n  \"rewarded_at\": \"2025-09-25T11:30:00Z\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/v1/reward",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "reward"]
        }
      }
    },
    {
      "name": "Get Portfolio",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <token>", "type": "text" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/v1/portfolio/user-1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "portfolio", "user-1"]
        }
      }
    },
    {
      "name": "Get Stats",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <token>", "type": "text" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/v1/stats/user-1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "stats", "user-1"]
        }
      }
    },
    {
      "name": "Get Historical INR",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <token>", "type": "text" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/v1/historical-inr/user-1?from=2025-09-01&to=2025-09-30",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "historical-inr", "user-1"],
          "query": [
            { "key": "from", "value": "2025-09-01" },
            { "key": "to", "value": "2025-09-30" }
          ]
        }
      }
    },
    {
      "name": "Get Today's Rewards",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <token>", "type": "text" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/v1/today-stocks/user-1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "today-stocks", "user-1"]
        }
      }
    }
  ]
}
